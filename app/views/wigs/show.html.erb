<div class= "container_wig">
  <div class= "name_photo_desc" >
    <h1><%= @wig.name %></h1>
    <%= image_tag @wig.photo, width:300, height: 300 %>
    <div class="card_infos_wigs" >
        <p><strong>Description : </strong><%= @wig.description %> </p>
        <p><strong>Couleur : </strong> <%= @wig.color %> </p>
        <p><strong>Description : </strong><%= @wig.renting_price %> €/jour</p>
    </div>
  </div>
  <div class="form_bookings">
    <div class="bg-white rounded p-4">
      <p></strong><%= @wig.renting_price %> €/jour</p>
      <h1>Louer la perruque</h1>
      <%= simple_form_for [@wig, @booking] do |f| %>
        <%= f.input :start_date, html5: true, placeholder: 'Début de location' %>
        <%= f.input :end_date, html5: true, placeholder: 'Fin de location' %>
        <%= f.submit "Soumettre ma demande", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
