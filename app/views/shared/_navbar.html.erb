<div class="navbar navbar-expand-sm navbar-light navbar-hairbnb">
  <div class="container-fluid">
    <%= link_to "/",  class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <%= form_with url: wigs_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control form-control-lg fs-auto",
      placeholder: "Perruque mulet, blanc..."%>
        <%= submit_tag "Rechercher", class: 'btn btn-pink' %>
    <% end %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">

          <%=link_to"Mettre ma perruque sur HairBnB", new_wig_path, class: "nav-link"%>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "bruce-willis.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Compte", "#", class: "dropdown-item" %>
              <%= link_to "Messages", "#", class: "dropdown-item" %>
              <%= link_to "Réservations", bookings_path, class: "dropdown-item" %>
              <%= link_to "Mes perruques", owner_wigs_path, class: "dropdown-item" %>
              <%= link_to "Aide", "#", class: "dropdown-item" %>
              <%= link_to "Déconnexion", "#", class: "dropdown-item", data: {turbo_method: :delete} %>
            </div>
          </li>
      </ul>
    </div>
  </div>
</div>
